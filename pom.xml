<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.motechproject</groupId>
    <artifactId>motech-server</artifactId>
    <version>1.4-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>MoTeCH Server</name>
    <description>A prototype system for the motech project.</description>

    <url>http://motech.rcg.usm.maine.edu/redmine/projects/show/motech</url>

    <ciManagement>
        <system>hudson</system>
        <url>http://ci.motechproject.org/</url>
    </ciManagement>

    <issueManagement>
        <system>jira</system>
        <url>http://pmo.applab.org/browse/MOGH</url>
    </issueManagement>

    <modules>
        <module>motech-server-core</module>
        <module>motech-server-omod</module>
    </modules>

    <repositories>
        <repository>
            <id>motech-repo</id>
            <name>Motech Maven Release Repository</name>
            <url>http://nexus.motechproject.org/content/repositories/public</url>
        </repository>
    </repositories>

    <pluginRepositories>
        <pluginRepository>
            <id>motech-repo</id>
            <name>Motech Maven Repository</name>
            <url>http://nexus.motechproject.org/content/repositories/public</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>

